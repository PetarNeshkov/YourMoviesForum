@model EditPostFormModel
@{
    ViewData["Title"] = "Post Edit";
}

<link href="~/css/editPost.css" rel="stylesheet" type="text/css" />

<body>
        <h1 id="title">@ViewData["Title"]</h1>
        <form class="edit font-weight-bold" asp-action="Edit">
               <label asp-for="Title">Title</label>
               <input asp-for="Title" class="form-control" placeholder="Edit your Title">
               <span asp-validation-for="Title" class="text-danger"></span>
            <div class="row mt-3">
                  <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CategoryId">Category</label>
                            <select asp-for="CategoryId" id="input-category">
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TagIds">Tags</label>
                            <select asp-for="TagIds" id="input-tags">
                                @foreach (var tag in Model.Tags)
                                {
                                    <option value="@tag.Id">@tag.Name</option>
                                }
                            </select>
                            <span asp-validation-for="TagIds" class="text-danger"></span>
                        </div>
                    </div>
              </div>
            <div class="form-group mt-3">
                <textarea id="tinymceInput" asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="row mt-4">
               <div class="col-auto ml-md-auto">
                   <button type="submit" class="btn btn-primary">Edit Post</button>
                   <a asp-controller="Posts"
                      asp-action="Details"
                      asp-route-id="@Model.Id"
                      class="btn btn- btn-secondary">
                       Cancel
                   </a>
               </div>
            </div>
       </form>
</body>

@section Scripts{
     <partial name="_ValidationScriptsPartial" />
     <script src="~/lib/selectize/selectize.js"></script>
     <script src="~/js/tinyMce.js"></script>
}